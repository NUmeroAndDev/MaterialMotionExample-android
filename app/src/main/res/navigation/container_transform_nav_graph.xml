<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/list_screen">

    <fragment
        android:id="@+id/list_screen"
        android:name="jp.numero.motion_example.container.ContainerTransitionFragment"
        android:label="@string/title_container_transition"
        tools:layout="@layout/fragment_container_transition">

        <action
            android:id="@+id/action_List_to_Detail"
            app:destination="@id/detail_screen" />
    </fragment>

    <fragment
        android:id="@+id/detail_screen"
        android:name="jp.numero.motion_example.container.DetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>